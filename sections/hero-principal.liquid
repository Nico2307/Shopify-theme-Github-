{% comment %}
  SECCIÓN HERO PRINCIPAL
  Sección de bienvenida con logo y descripción
{% endcomment %}

<section class="hero-section" style="
  background: linear-gradient(180deg, #000000 0%, #0a0a0a 100%);
  padding: 120px 24px;
  text-align: center;
  position: relative;
  overflow: hidden;
">
  <div class="container" style="max-width: 1200px; margin: 0 auto; position: relative; z-index: 2;">
    
    {%- comment -%} Logo de la empresa {%- endcomment -%}
    <div class="company-logo" style="margin-bottom: 40px;">
      {% if section.settings.logo != blank %}
        <img 
          src="{{ section.settings.logo | image_url: width: 300 }}"
          alt="{{ shop.name }}"
          style="max-width: 300px; height: auto; margin: 0 auto; display: block;"
          loading="eager"
        >
      {% else %}
        <h1 style="
          font-size: clamp(3rem, 6vw, 5rem);
          background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 25%, #ffffff 50%, #e0e0e0 75%, #ffffff 100%);
          background-size: 200% 200%;
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
          animation: gradient-shift 8s ease infinite;
          margin: 0 0 20px 0;
          font-weight: 700;
        ">{{ shop.name }}</h1>
      {% endif %}
    </div>

    {%- comment -%} Eslogan/Título principal {%- endcomment -%}
    <h2 style="
      font-size: clamp(2rem, 4vw, 3.5rem);
      color: #ffffff;
      margin: 0 0 24px 0;
      font-weight: 700;
      letter-spacing: -0.02em;
    ">
      {{ section.settings.heading | default: "Bienvenido a tu tienda" }}
    </h2>

    {%- comment -%} Descripción {%- endcomment -%}
    <div class="hero-description" style="
      font-size: 1.25rem;
      color: #9b9b9b;
      max-width: 700px;
      margin: 0 auto 48px auto;
      line-height: 1.6;
    ">
      {{ section.settings.description | default: "Descubre productos increíbles diseñados especialmente para ti" }}
    </div>

    {%- comment -%} Botones de acción {%- endcomment -%}
    <div class="hero-buttons" style="
      display: flex;
      gap: 16px;
      justify-content: center;
      flex-wrap: wrap;
    ">
      {% if section.settings.button_label_1 != blank %}
        <a 
          href="{{ section.settings.button_link_1 | default: '/collections/all' }}"
          class="hero-button"
          style="
            background: #ffffff;
            color: #000000;
            border: 2px solid #ffffff;
            border-radius: 8px;
            padding: 16px 40px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
          "
        >
          {{ section.settings.button_label_1 }}
        </a>
      {% endif %}

      {% if section.settings.button_label_2 != blank %}
        <a 
          href="{{ section.settings.button_link_2 | default: '/pages/about' }}"
          class="hero-button-secondary"
          style="
            background: transparent;
            color: #ffffff;
            border: 2px solid #ffffff;
            border-radius: 8px;
            padding: 16px 40px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
          "
        >
          {{ section.settings.button_label_2 }}
        </a>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Efecto de fondo animado {%- endcomment -%}
  <div style="
    position: absolute;
    top: 10%;
    right: 10%;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.03) 0%, transparent 70%);
    pointer-events: none;
    animation: float 15s ease-in-out infinite;
  "></div>
</section>

{% schema %}
{
  "name": "Hero Principal",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo de la empresa"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título principal",
      "default": "Bienvenido a tu tienda"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>Descubre productos increíbles diseñados especialmente para ti</p>"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "label": "Texto del botón 1",
      "default": "Ver productos"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Enlace del botón 1"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Texto del botón 2",
      "default": "Conoce más"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Enlace del botón 2"
    }
  ],
  "presets": [
    {
      "name": "Hero Principal"
    }
  ]
}
{% endschema %}
